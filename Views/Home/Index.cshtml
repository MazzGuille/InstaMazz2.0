@{
    ViewBag.Title = "Perfil";
    var Publicaciones = ViewBag.Publicaciones;
}
@model InstaMazz2._0.Models.UsuarioModel
<head>
    <link href="~/Content/CSS/Perfil.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">*@
</head>


<body class="pt-1">
    <div class="container wrapper mt-1">

        <div class="card " style="max-width: 40vw;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/Upload/@Model.imagenPerf" class="img-fluid rounded-start h-100 w-100">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title">@Model.Nombre</h2>
                        <p class="card-text">@Model.BioUsuario</p>
                        @*<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>*@
                        <h4 class="card-text"><small class="text-muted">@Model.UserName</small></h4>
                        <div class="d-flex flex-row justify-content-start gap-3">
                            @if (ViewBag.usu)
                            {
                                <form action="@Url.Action("CrearPost", "Post")">
                                    <button type="submit" class="btn btn-success btn-s"><i class="bi bi-plus-circle"></i> </button>
                                </form>
                                <form action="@Url.Action("EditarPerfil", "Acceso")">
                                    <button type="submit" class="btn btn-info btn-s"><i class="bi bi-pencil"></i> </button>
                                </form>
                            }
                            else
                            {
                                <form action="@Url.Action("", "Acceso")">
                                    <button type="submit" class="btn btn-primary btn-s"><i class="bi bi-pencil"></i>Enviar Invitación</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="row">
               
                @foreach (var item in Publicaciones)
                {
                    <div style="width: fit-content; background: none;">
                        <img src="@item.UrlImg" class="card-img-top" alt="..." style="width:200px; height: 200px;">
                        <div class="card-body mw-150px bg-none" style="max-width: 200px; min-height:120px; background: none;">
                            <p class="card-text bg-white p-2">@item.Descripcion</p>
                            @*<div class="btn btn-danger btn-lg"> <i class="bi bi-trash"></i>@Html.ActionLink(" ", "ListarVista", "Post")</div>*@

                        </div>
                        @if (ViewBag.usu){
                            <form action="@Url.Action("Delete", "Post", new {IdPost = item.IdPost})" method="post">
                                <button type="submit" class="btn btn-danger btn-s"><i class="bi bi-trash"></i> </button>
                            </form>
                            <hr />
                         }
                    </div>
                }

            </div>
        </div>
    </div>

</body>


