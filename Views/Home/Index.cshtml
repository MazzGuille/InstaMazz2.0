@{
    ViewBag.Title = "Home Page";
}

<div class="container wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 img">
                <img src="~/css/WhatsApp Image 2021-09-13 at 2.32 1.png" alt="" class="img-rounded imagen">
            </div>
            <div class="col-md-6 details">
                <blockquote class="blockquote">
                    <h3> @ViewData["Nombre"]</h3>
                </blockquote>
                <p>@ViewData["Mail"]</p>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="botton-container">
            <div class="btn btn-success btn-lg"> <i class="bi bi-plus-circle"></i> <a>@Html.ActionLink("Crear Publicacion", "CrearPost", "Post")</a> </div>
            <div class="btn btn-danger btn-lg"> <i class="bi bi-dash-circle"></i> <a>@Html.ActionLink("Eliminar Publicacion", "ListarVista", "Post")</a> </div>
        </div>
        <div class="row">
            <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="gallery-title">Publicaciones</h1>
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter hdpe">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
                <p>Aca va la descripcion</p>
            </div>

        </div>
    </div>
</div>