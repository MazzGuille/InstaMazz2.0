@{
    ViewBag.Title = "Perfil";
    var Publicaciones = ViewBag.Publicaciones;
}
@model InstaMazz2._0.Models.UsuarioModel
<head>
    <link href="~/Content/CSS/Perfil.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<div class="container">

    <div class="row">
        <div class="col-xs-12 col-md-12 bg-primary">
            <div class="card" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/Upload/@Model.imagenPerf" class="img-fluid rounded-start h-100 w-100">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body text-dark">
                            <h3 class="card-title">@Model.Nombre</h3>
                            <p class="card-text">@Model.BioUsuario</p>
                            <p class="card-text"><small class="text-muted">@Model.UserName</small></p>
                            <div class="row">
                                <div class="col-xs-12 col-md-6 mr-0">
                                    <form action="@Url.Action("CrearPost", "Post")">
                                        <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-plus-circle"></i> </button>
                                    </form>
                                </div>
                                <div class="col-xs-12 col-md-6">
                                    <form action="@Url.Action("EditarPerfil", "Acceso")">
                                        <button type="submit" class="btn btn-info btn-lg"><i class="bi bi-pencil"></i> </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-12 bg-secondary">

            <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 style="color:darkturquoise;" class="gallery-title">Publicaciones</h1>
            </div>

            @foreach (var item in Publicaciones)
            {
                <div style="width: fit-content; background: none;">
                    <img src="@item.UrlImg" class="card-img-top" alt="..." style="width:200px; height: 200px;">
                    <div class="card-body mw-150px bg-none" style="max-width: 200px; min-height:130px; background: none;">
                        <p class="card-text bg-white p-2">@item.Descripcion</p>
                        @*<div class="btn btn-danger btn-lg"> <i class="bi bi-trash"></i>@Html.ActionLink(" ", "ListarVista", "Post")</div>*@

                    </div>
                    <form action="@Url.Action("Delete", "Post", new {IdPost = item.IdPost})" method="post">
                        <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-trash"></i> </button>
                    </form>
                </div>
            }

        </div>
    </div>
    
</div>