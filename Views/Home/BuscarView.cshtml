    <form action="@Url.Action("Search","Home")" method="post">
        <div class="input-group">
            <input name="Nombre" type="text" class="form-control"/>
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">Buscar</button>
            </div>
        </div>
