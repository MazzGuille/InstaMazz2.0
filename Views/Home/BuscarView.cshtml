
@{
    ViewBag.Title = "BuscarView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Buscar = ViewBag.Buscar;
}

<div class="row d-flex flex-column justify-content-center align-items-start buscar" style="margin-top: 10vh; margin-left: 3vw;">
    <div class="row">
        <div class="col-lg-12">
            <form action="@Url.Action("Search", "Home")" method="post">
                <div class="input-group d-flex gap-3">
                    <input name="Nombre" type="text" class="form-control w-100" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />

    @foreach (var item in Buscar)
    {
        if (ViewBag.IdS != item.Email)
        {
            <div class="card col-xs-12 col-md-7 col-lg-5 shadow">
                <div class="row g-0 p-0">
                    <div class="col-xs-12 col-md-6 p-0" style="height: 250px;">
                        <img src="/Upload/@item.imagenPerf" class="img-fluid rounded-start h-100 w-100">
                    </div>
                    <div class="col-xs-12 col-md-6 p-0">
                        <div class="card-body">
                            <h2 class="card-title">@item.Nombre</h2>
                            <p class="card-text">@item.UserName</p>
                            <a>@Html.ActionLink("Ir a Perfil", "MePerfil", "Home", new { email = item.Email }, new { @class = "btn btn-primary shadow" })</a>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    }


</div>





