    <div class="container">
        @foreach (var item in Buscar)
        {

         <div class="row">
             <div class="col-3">
                 <img src="/Upload/@item.imagenPerf" class="rounded-circle img-fluid h-10 w-10" />
             </div>
             <div class="col-3">
                 <h2>Nombre: @item.Nombre</h2>
                 <p>User Name: @item.UserName</p>
