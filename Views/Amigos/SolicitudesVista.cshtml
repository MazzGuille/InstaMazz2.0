
@{
    ViewBag.Title = "SolicitudesVista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var solicitudes = ViewBag.listaSolicitudes;
}
<div style="margin-top: 10vh; margin-left: 10vh;">
    <h2>SolicitudesVista</h2>
    @foreach (var item in solicitudes)
    {
        <div class="card row" @*style="width: 18rem;"*@>
            <div>
                <img src="/Upload/@item.imagenPerf" class="card-img-top" alt="...">
            </div>
            <div class="card-body">
                <h3 class="card-title">@item.Nombre</h3>
                <h5 class="card-text">@item.UserName</h5>
                <div>
                    <form>
                        <button type="submit" class="btn btn-sm btn-success">
                            Aceptar solicitud
                        </button>
                    </form>
                    <form>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Rechazar solicitud
                        </button>
                    </form>                   
                </div>
            </div>
        </div>
        <br />
    }
</div>




