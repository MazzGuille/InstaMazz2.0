@{
    ViewBag.Title = "ListaAmigosVista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var solicitudes = ViewBag.listaSolicitudes;
}
<div class="row" style="margin-top: 10vh; margin-left: 3vw; margin-right: 3vw;">
    <h2>Lista de amigos</h2>
    @foreach (var item in solicitudes)
    {
        if (ViewBag.IdUsu != item.Email)
        {
            <div class="card shadow col-xs-12 col-md-3 p-0 me-2 mb-2 ms-2">
                <div class="p-3" style="height: 280px;">
                    <img src="/Upload/@item.imagenPerf" class="card-img-top h-100 w-100">
                </div>
                <div class="card-body p-2">
                    <h3 class="card-title ms-2">@item.Nombre</h3>
                    <h5 class="card-text ms-2">@item.UserName</h5>
                    <div class="d-flex gap-1 mx-1 mb-2">
                        <a>@Html.ActionLink(" Ver perfil", "MePerfil", "Home", new { email = item.Email }, new { @class = "btn text-primary border border-primary bi bi-person-lines-fill" })</a>
                        <a>@Html.ActionLink(" Eliminar", "AceptarSolicitud", "Amigos", new { idAcp = item.Id, AcpRech = 0 }, new { @class = "btn text-danger border border-danger bi bi-person-dash-fill" })</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
