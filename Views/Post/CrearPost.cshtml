
@{
    ViewBag.Title = "Crear Pubicacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card shadow" style="width: 33rem; margin:auto; margin-top:25vh;">
    <div class="card-body">
        <div style="margin-left:auto; margin-right:auto; display:grid; place-content:center;">
            <h2 class="fw-bold">Crear Publicación</h2>
        </div>

        <form action="@Url.Action("CrearPost", "Post")" method="post">
            <div class="form-group">
                <input name="IdUsuario" type="number" class="form-control card-text" value="@ViewBag.IdUsuario" style="display:none">
            </div>
            <div class="form-group">
                <input name="UserName" type="text" class="form-control card-text" value="@ViewBag.UserName" style="display:none">
            </div>
            <div class="form-group" style="margin-left:auto; margin-right:auto; display:grid; place-content:center;">
                <input name="UrlImg" type="url" class="form-control card-text" placeholder="URL de la imagen" style="width:30rem;">
            </div>
            <div class="form-group" style="margin-left:auto; margin-right:auto; display:grid; place-content:center;">
                <input name="Titulo" type="Text" class="form-control card-text" placeholder="Titulo" style="width:30rem;">
            </div>
            <div class="form-group" style="margin-left:auto; margin-right:auto; display:grid; place-content:center;">
                <input name="Descripcion" type="text" class="form-control card-text" placeholder="descripción" style="width:30rem;">
            </div>
            <div class="my-2" style="display:grid; place-content: center;">
                <button type="submit" class="btn text-success border border-success bi bi-plus-circle-fill shadow"> Crear Publicación</button>
            </div>
        </form>

    </div>

</div>






