@{
    ViewBag.Title = "FeedView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Feed = ViewBag.Feed;
}
<head>
    <link href="~/Content/CSS/Perfil.css" rel="stylesheet" />
    <link href="~/Content/CSS/FeedCSS.css" rel="stylesheet" />
</head>

<div class="container mt-1">
    @foreach (var item in Feed)
    {
        <div class="d-flex justify-content-center" style="min-width: 40vw; max-width: 40vw; margin-left:auto; margin-right: auto;">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-10">
                    <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="min-width:40vw; max-width: 40vw; ">
                        <div class="card-header text-left">
                            <h3 class="text-secondary text-left">@item.UserName</h3>
                        </div>
                        <img class="img-responsive card-img-top" src="@item.UrlImg" />
                        <div class="card-body">
                            <div class="card-text">
                                @item.Descripcion
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



