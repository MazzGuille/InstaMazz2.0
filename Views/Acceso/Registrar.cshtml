@model InstaMazz2._0.Models.UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>InstaMazz Registro</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="~/Content/CSS/FileInput.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="~/Content/JS/Input.js"></script>
</head>
<body>

    <section class="vh-100">
        <div class="container py-1 h-100">
            <div class="row d-flex align-items-center justify-content-center h-50">  
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="~/Content/CSS/register.png" class="img-fluid imagen" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-6"> 
                    
                    <form autocomplete="off" action="@Url.Action("Registrar", "Acceso")" method="post" enctype="multipart/form-data">

                        <!-- Email input -->
                        @*<input type="email" name="email" class="form-control input_user" value="" placeholder="E-Mail">*@

                        <div class="form-outline mt-2 mb-2">
                            <label class="form-label m-0" for="form1Example13"><i class="bi bi-envelope-fill text-primary"></i> E-Mail</label>
                            <input type="email" name="email" id="form1Example13" class="form-control" placeholder="EJ: usuario@email.com" />
                        </div>

                        <!-- Nombre input -->
                        <div class="form-outline mb-2">
                            @*<input type="Text" name="Nombre" class="form-control input_pass" placeholder="Nombre">*@
                            <label class="form-label m-0" for="form1Example23"><i class="bi bi-person-fill text-primary"></i> Nombre completo</label>
                            <input type="text" name="Nombre" id="form1Example23" class="form-control" placeholder="EJ: Usuario Peréz"/>
                        </div>

                        <!-- UserName input -->
                        <div class="form-outline mb-2">
                            @*<input type="Text" name="UserName" class="form-control input_pass" placeholder="Nombre de usuario">*@
                            <label class="form-label m-0" for="form1Example23"><i class="bi bi-person-fill text-primary"></i> Usuario</label>
                            <input type="text" name="UserName" id="form1Example23" class="form-control" placeholder="EJ: UsuPe" />
                        </div>

                        <!-- Imagen de perfil input -->
                        <div class="form-outline mb-2">
                            <div><i class="bi bi-image-fill text-primary"></i> Imagén de perfil</div>
                            <label style=" border: 1px solid #ccc; display: inline-block; color: gray; padding: 6px 12px; cursor: pointer; width: 100%;" for="formFile" class="form-label m-0">Selecciona una imagen &nbsp;&nbsp;&nbsp;&nbsp;<span id="fileName">Nombre del archivo: </span></label>                              
                            <input name="ImagenPerfil" class="prueba" type="file" id="formFile" style="display: none;">
                        </div>                        

                        <!-- Biografia input -->
                        <div class="form-outline mb-2">
                            <label class="form-label m-0" for="form1Example23"><i class="bi bi-map-fill text-primary" style="margin-bottom: 0;"></i> Biografia</label>
                            <textarea type="text" name="BioUsuario" id="form1Example23" class="form-control"></textarea>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-2">
                            @*<input type="password" name="Contraseña" class="form-control input_pass" value="" placeholder="Contraseña">*@
                            <label class="form-label m-0" for="form1Example23"><i class="bi bi-key-fill text-primary"></i> Contraseña</label>
                            <input type="password" name="Contraseña" id="form1Example23" class="form-control" placeholder="EJ: Usuario1234" />
                        </div>

                        <!-- Confirmar contraseña input -->
                        <div class="form-outline mb-3">
                            @*<input type="password" name="Contraseña" class="form-control input_pass" value="" placeholder="Contraseña">*@
                            <label class="form-label m-0" for="form1Example23"><i class="bi bi-key-fill text-primary"></i> Confirmar contraseña</label>
                            <input type="password" name="ConfirmarClave" id="form1Example23" class="form-control" placeholder="EJ: Usuario1234" />
                        </div>

                        @if (ViewData["email"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["email"]
                            </div>
                        }


                        @if (ViewData["Nombre"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Nombre"]
                            </div>
                        }

                        @if (ViewData["NombreUsuario"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["NombreUsuario"]
                            </div>
                        }

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        @if (ViewBag.NombreNull != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.NombreNull
                            </div>
                        }

                        @if (ViewBag.UserNameNull != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.UserNameNull
                            </div>
                        }

                        @if (ViewBag.MailNull != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.MailNull
                            </div>
                        }

                        @if (ViewData["Mensaje2"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje2"]
                            </div>
                        }

                        <!-- Submit button -->
                        <button type="submit" class="btn text-primary bg-white border border-primary btn-block">Crear cuenta</button>
                        <div class="mt-4">
                            <div class="d-flex justify-content-center links">
                                ¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Acceso")" class="ml-2">¡Ingresa aquí!</a>
                            </div>
                        </div>

                    </form>
                    </div>
                </div>
        </div>
    </section>

</body>
</html>





