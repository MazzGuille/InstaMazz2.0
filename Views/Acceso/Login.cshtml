
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <title>InstaMazz Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="~/Content/CSS/Login.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
</head>

<body>


    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form autocomplete="off" action="@Url.Action("Login", "Acceso")" method="post">
                        <!-- Email input -->
                        @*<input type="email" name="email" class="form-control input_user" value="" placeholder="E-Mail">*@
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example13"><i class="bi bi-envelope-fill text-primary"></i> E-Mail</label>
                            <input type="email" name="email" id="form1Example13" class="form-control form-control-lg" />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            @*<input type="password" name="Contraseña" class="form-control input_pass" value="" placeholder="Contraseña">*@
                            <label class="form-label" for="form1Example23"><i class="bi bi-key-fill text-primary"></i> Contraseña</label>
                            <input type="password" name="Contraseña" id="form1Example23" class="form-control form-control-lg" />
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        @if (ViewBag.MailNull != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.MailNull
                            </div>
                        }

                        @if (ViewBag.PassNull != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.PassNull
                            </div>
                        }

                        <!-- Submit button -->
                        <button type="submit" class="btn text-primary bg-white border border-primary btn-block">Iniciar Sesión</button>
                        <div class="mt-4">
                            <div class="d-flex justify-content-center links">
                                ¿Aun no tienes una cuenta? <a href="@Url.Action("Registrar","Acceso")" class="ml-2">¡Regístrate!</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>


</body>





