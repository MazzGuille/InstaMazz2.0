@model InstaMazz2._0.Models.UsuarioModel

@{
    ViewBag.Title = "EditarPerfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row p-0 mt-3 mx-2 w-100 d-flex flex-column align-items-center justify-content-center w-100">
    <h2>EditarPerfil</h2>

    <div class="card shadow-lg col-xs-12 col-md-7 col-lg-5 p-3">


        <form action="@Url.Action("EditarPerfil", "Acceso")" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <img class="img-fluid rounded-start h-100 w-100" src="/Upload/@ViewBag.Img" />
                Imagen de perfil <input type="file" name="ImagenPerfil" class="form-control input_pass">
            </div>

            <div class="form-group">
                <input name="IdUsuario" type="number" class="form-control" value="@ViewBag.IdUsuario" style="display: none">
            </div>

            <div class="form-group">
                Nombre <input name="Nombre" type="text" value="@ViewBag.Nom" class="form-control border border-cyan">
            </div>

            <div class="form-group">
                Nombre de usuario <input name="UserName" type="text" value="@ViewBag.NomUs" class="form-control border border-cyan">
            </div>

            <div class="form-group">
                Biografia <textarea name="BioUsuario" maxlength="120" type="text" value="@ViewBag.Bio" class="form-control border border-cyan" style="height: 80px;"></textarea>
            </div>

            @if (ViewBag.NombreNull != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.NombreNull
                </div>
            }

            @if (ViewBag.UserNameNull != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.UserNameNull
                </div>
            }

            @if (ViewBag.BioNull != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.BioNull
                </div>
            }
                
        <div class="my-2" style="display:grid; place-content: center;">
            <button type="submit" class="btn text-primary border border-primary bi bi-pencil-fill shadow"> Guardar cambios</button>
        </div>
        </form>
    </div>
</div>